@model IEnumerable<LeaveApplication.DAL.Models.LeaveInformation>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Index" asp-controller="LeaveDashboard"> Approval List</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LeaveType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaveStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateRequested)
            </th>       
            <th>
                @Html.DisplayNameFor(model => model.InitialBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinalBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LineManager)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaveDays)
            </th>
       
            <th>
                @Html.DisplayNameFor(model => model.LeaveFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaveTo)
            </th>
         
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LeaveType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeaveStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateRequested)
            </td>
      
            <td>
                @Html.DisplayFor(modelItem => item.InitialBalance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinalBalance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StaffId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LineManager)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeaveDays)
            </td>
       
            <td>
                @Html.DisplayFor(modelItem => item.LeaveFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeaveTo)
            </td>
        
            <td>
                <a asp-action="Approve" asp-route-id="@item.Id">Approve</a> |
                <a asp-action="Reject" asp-route-id="@item.Id">Reject</a>        
            </td>
        </tr>
}
    </tbody>
</table>
