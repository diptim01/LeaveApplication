@inject SignInManager<IdentityUser> signInManager

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <title>World Best Local Directory Website template</title>
    <!-- META TAGS -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- FAV ICON(BROWSER TAB ICON) -->
    <link rel="shortcut icon" href="~/images/fav.ico" type="image/x-icon">
    <!-- GOOGLE FONT -->
    <link href="https://fonts.googleapis.com/css?family=Poppins%7CQuicksand:500,700" rel="stylesheet">
    <!-- FONTAWESOME ICONS -->
    <link rel="stylesheet" href="~/lib/css/font-awesome.min.css">
    <!-- ALL CSS FILES -->
    <link href="~/lib/css/materialize.css" rel="stylesheet">
    <link href="~/lib/css/style.css" rel="stylesheet">
    <link href="~/lib/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <!-- RESPONSIVE.CSS ONLY FOR MOBILE AND TABLET VIEWS -->
    <link href="~/lib/css/responsive.css" rel="stylesheet">

    <style>
        .log-in-pop-right .s12 > .text-danger li, span {
            color: red;
        }

        .v3-top-ri li{
            display: inline;
        }

        .ts-menu .v3-top-ri ul .custombutton {
            font-size: 14px;
            color: #fff;
            border: 1px solid #44526c;
            font-weight: 400;
            border-radius: 4px;
            padding: 4px 9px;
            margin-top:-5px;
            margin-left: 7px;
            background-color: transparent;
        }


    </style>
</head>
<body>
    <!--PRE LOADING-->
    <div id="preloader">
        <div id="status">&nbsp;</div>
    </div>
    <!--TOP SEARCH SECTION-->
    <section class="bottomMenu dir-il-top-fix">
        <div class="container top-search-main">
            <div class="row">
                <div class="ts-menu">
                    <!--SECTION: LOGO-->
                    <div class="ts-menu-1">
                        <a href="index-1.html"><img src="~/images/aff-logo.png" alt=""> </a>
                    </div>
              
                    <!--SECTION: REGISTER,SIGNIN AND ADD YOUR BUSINESS-->
                    <div class="ts-menu-4">
                        <div class="v3-top-ri">
                            <ul padding-left:50px>
                                @if (signInManager.IsSignedIn(User))
                                {
                                    <li>
                                        <form method="post">
                                            <button asp-action="Logout" asp-controller="Account" class="custombutton fa-pull-right" type="submit"><i class="fa fa-sign-out"></i>Logout @User.Identity.Name </button>
                                        </form>
                                    </li>
                                    @*<li>
                                        <a href="#!" class="v3-add-bus"><i class="fa fa-plus" aria-hidden="true"></i> Add Listing</a>
                                    </li>*@
                                }
                                else
                                {
                                    <li><a href="#!" class="v3-menu-sign"><i class="fa fa-sign-in"></i> Sign In</a> </li>
                                    @*<li><a href="db-listing-add.html" class="v3-add-bus"><i class="fa fa-plus" aria-hidden="true"></i> Add Listing</a> </li>*@
                                }
                            </ul>
                        </div>
                    </div>
                    <!--MOBILE MENU ICON:IT'S ONLY SHOW ON MOBILE & TABLET VIEW-->
                    <div class="ts-menu-5"><span><i class="fa fa-bars" aria-hidden="true"></i></span> </div>

                </div>
            </div>
        </div>
    </section>
    <div class="container" style="margin-top:90px">
        @RenderBody()
    </div>
    <!--COPY RIGHTS-->
    <section class="copy">
        <div class="container">
            <p>copyrights © <span id="cryear">@DateTime.Now.Year</span> LeaveApp. &nbsp;&nbsp;All rights reserved. </p>
        </div>
    </section>

    <script src="~/lib/js/jquery.min.js"></script>
    <script src="~/lib/js/bootstrap.js" type="text/javascript"></script>
    <script src="~/lib/js/materialize.min.js" type="text/javascript"></script>
    <script src="~/lib/js/custom.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</body>
</html>
